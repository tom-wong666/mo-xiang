/* pages/components/musicControls/musicControls.wxss */
.music {
  position: relative;
  height: 90rpx;
  margin-bottom: 15rpx;
}
.music-control {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.control-left {
  width: 40%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.music-info {
  color: #ff677d;
  width: 40%;
  overflow: hidden;
}
.music-info-text {
  font-weight: bold; 
  display: inline-block;
  width: 400rpx;
  animation: toLeft 6s linear infinite;
}
@keyframes toLeft {
  0% {
    margin-left: 300rpx;
  }
  100% {
    margin-left: -400rpx;
  }
}
.music-list {
  background: #fff;
  position: absolute;
  right: 5rpx;
  padding: 20rpx;
}
.music-list-hidden {
  display: none;
}
.music-list-item {
  display: block;
  padding: 5rpx;
  text-align: right;
  color: #ff677d;
}
.music-list-item-current {
  color: #000;
}